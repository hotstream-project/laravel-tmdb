{
    "name": "hotstream/laravel-tmdb",
    "description": "Simple integration with TMDB ( The Movie Database ) API to retrieve their data.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed Elkomy",
            "email": "mo.ah.elkomy@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0",
        "illuminate/support": ">=6.0.0"
    },
    "autoload": {
        "psr-4": {
            "Hotstream\\Tmdb\\": "src/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Hotstream\\Tmdb\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hotstream\\Tmdb\\TmdbServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors --testdox",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "keywords": [
        "tmdb",
        "tmdb-api",
        "themoviedb",
        "themoviedb-api",
        "themoviedatabase",
        "api",
        "php",
        "laravel"
    ]
}
